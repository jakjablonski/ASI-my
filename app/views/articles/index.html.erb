
<% @articles.each do |article| %>
	<div class="col-md-4">
		<div class="panel panel-default" >
			<div class="panel-heading" >
                <h3><i class="fa fa-fw fa-gift" style=" text-align:center;"></i><%= article.title %></h3>
            </div>
            <div class="panel-body" style=" height:90px; text-align:center;" >
			<%= link_to "Show", article_path(article), class: "btn btn-default" %>
			<%if article.user==current_user %>
			<%= link_to "Edit", edit_article_path(article), class: "btn btn-default" %>
			<%= link_to "Destroy", article_path(article), method: :delete,
            data: { confirm: 'Are you sure?' }, class: "btn btn-default" %>
						<% end %>
			</div>
		</div>
	</div>
 <% end %>
